<div class="script" style="top:@toppx;left:@leftpx;">
    <ul>
        <li @onclick="closethis">关闭当前</li>
        <li @onclick="closeall">全部关闭</li>
        <li @onclick="closerests">除此之外关闭</li>
    </ul>
</div>

@code {

    [Parameter]
    public double top { get; set; }

    [Parameter]
    public double left { get; set; }

    [Parameter]
    public EventCallback closethis { get; set; }

    [Parameter]
    public EventCallback closeall { get; set; }

    [Parameter]
    public EventCallback closerests { get; set; }

    string toppx { get { return $"{top}px"; } }

    string leftpx { get { return $"{left}px"; } }

}