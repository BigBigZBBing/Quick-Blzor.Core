@page "/"
@namespace QuickWeb.Web
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QuickWeb.Web</title>
    <base href="~/" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/layout.less" rel="stylesheet/less" asp-append-version="true" />
    <link href="~/css/menu.less" rel="stylesheet/less" asp-append-version="true" />
    <link href="~/css/tabcontrol.less" rel="stylesheet/less" asp-append-version="true" />
    <link href="~/css/login.less" rel="stylesheet/less" asp-append-version="true" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="~/js/less.min.js" type="text/javascript" asp-append-version="true"></script>
</body>
</html>